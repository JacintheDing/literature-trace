<view class="container">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading">
    <loading>加载中...</loading>
  </view>
  
  <!-- 错误提示 -->
  <view wx:elif="{{error}}" class="error">
    {{error}}
  </view>
  
  <!-- 文献详情 -->
  <view wx:else class="paper-detail">
    <view class="detail-title">{{paper.title}}</view>
    
    <view class="detail-info">
      <view class="detail-authors">{{paper.authors.join(', ')}}</view>
      <view class="detail-journal">{{paper.journal}}</view>
      <view class="detail-date">{{formatDate(paper.publicationDate)}}</view>
    </view>
    
    <view class="detail-abstract">
      <view class="abstract-title">摘要</view>
      <view class="abstract-content">{{paper.abstract || '无摘要信息'}}</view>
    </view>
    
    <view class="detail-keywords" wx:if="{{paper.keywords && paper.keywords.length > 0}}">
      <view class="keywords-title">关键词</view>
      <view class="keywords-list">
        <view 
          class="keyword-item" 
          wx:for="{{paper.keywords}}" 
          wx:key="*this"
        >
          {{item}}
        </view>
      </view>
    </view>
    
    <!-- 全文链接按钮 -->
    <view 
      class="fulltext-btn" 
      wx:if="{{paper.fullTextUrl}}"
      bindtap="openFullText"
    >
      查看全文
    </view>
  </view>
</view>